#!/bin/bash

export NODE_VERSION=8.10.0

echo "Configure - start"
apt-get - update && \
apt-get install python && \
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.33.11/install.sh | bash && \
source ~/.bashrc && \
nvm install $NODE_VERSION && \
npm install -g yarn && \
echo "Configure - done"
